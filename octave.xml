<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<JobDefinition xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl">


	<JobDescription grisu_modules="MatchMakerPanel">

		<GrisuTemplate xmlns="http://arcs.org.au/jsdl/jsdl-grisu">
			<Email description="The email address to send an email to if the job status changes." multiplicity="?" name="EmailAddress" other="useLastValue" template="Email"/>
		</GrisuTemplate>

		<JobIdentification>

			<JobName defaultValue="Octave" description="The name of the job." name="Jobname" other="autosuggest,nosuggestbutton" template="JobName"/>

		</JobIdentification>

		<Application>

			<ApplicationName>Octave</ApplicationName>
			<ApplicationVersion description="The version of octave" name="Version" other="useAny,useExact" template="Version"/>
			<Description>
				GNU Octave is a high-level language, primarily intended for numerical computations. Find more about Octave at http://www.gnu.org/software/octave/
			</Description>
			<POSIXApplication xmlns="http://schemas.ggf.org/jsdl/2005/11/jsdl-posix">

				<Executable>octave</Executable>

				<Argument>--no-history</Argument>
				<Argument>--no-line-editing</Argument>
				<Argument substitute="INPUT_FILE[basename]"/>

				<WorkingDirectory filesystemName="userExecutionHostFs" postprocess="FillWithJobDirectoryRelativeToExecutionFileSystem"/>
				<!-- 	The name of the standard output file. -->
				<Output>stdout.txt</Output>
				<!--  	The name of the standard error file. -->
				<Error>stderr.txt</Error>
				<!-- 	loads the module needed for a Octave job -->

			</POSIXApplication>


			<TotalCPUTime defaultValue="600" description="The total cpu time in seconds." multiplicity="1" name="Walltime" postprocess="TimesNoCPUs" template="InputInteger"/>

			<TotalCPUCount defaultValue="1" description="How many CPUs do you want to use to run this job." multiplicity="1" name="CPUs" prefills="1" template="InputInteger"/>
			
                        <TotalPhysicalMemory>
                                <LowerBoundedRange defaultValue="0" description="The minimum amount of memory in mb for this job." multiplicity="1" name="MinMem" postprocess="ConvertToBytes" prefills="0,1024,2048,4096,8192" template="InputInteger"/>
                        </TotalPhysicalMemory>

		</Application>
		<Resources>
			<CandidateHosts>
	
				<HostName description="Where do you want to submit the job to?" multiplicity="1" name="HostName" template="InputString"/>

			</CandidateHosts>

		</Resources>

		<DataStaging>
			<FileName/>
			<FileSystemName></FileSystemName>
			<Source>

				<URI description="Please provide your Octave script here." multiplicity="1" name="A_OctaveInputFile" other="render=combobox,useHistory=6,directoryKey=Octave" postprocess="FillDataStagingFileNameElement,Substitute[name=INPUT_FILE]" template="InputFile" title="Octave script" validator="InputFile"/>

			</Source>
		</DataStaging>

		<DataStaging>
			<FileName/>
			<FileSystemName></FileSystemName>
			<Source>

				<URI description="Optional data files required by Octave script" multiplicity="*" name="B_OtherFiles" postprocess="FillDataStagingFileNameElement" template="MultipleInputFiles" title="Other input files" validator="InputFile"/>

			</Source>
		</DataStaging>

	</JobDescription>
</JobDefinition>
